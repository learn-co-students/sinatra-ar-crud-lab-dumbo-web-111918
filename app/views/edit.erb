<form method="post" action="/articles/<%=@article.id %>" >
    <input type="hidden" name="_method" value="patch" >

  <ul>
    <li>
      <label for="article[title]">Edit Article Title</label>
      <input id="title" type="text" name="article[title]" value = "<%=@article.title %>" />
    </li>
    <li>
      <label for="article[content]">Edit Article Content</label>
      <textarea id="content" type="text" name="article[content]" value ="<%=@article.content%>" ></textarea>
    </li>
  </ul>
 
  <input type="submit" value= "Edit <%=@article.title%>" />
</form>